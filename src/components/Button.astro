---
interface Props {
	text: string;
	href: string;
	icon: string;
}

const {text, href, icon} = Astro.props;
---
<a class="button_text" href={href} target="_blank">
	<img src={icon} alt="">
	<p>{text}</p>
</a>

<style>

	.button_text{
		display: flex;
		align-content: center;
		border-radius: 15px;
		padding-top: 2px;
		padding-bottom: 2px;
		padding-left: 10px;
		padding-right: 10px;
		gap: 10px;
		text-decoration: none;

		background-color: var(--secondary_color);
		border: 1px solid var(--transparent);

		transition: background-color 0.5s ease, border 0.5s ease;
	}

	.button_text p{
		color: var(--text_color);
		font-family: Mada_Regular;
		font-size: 1rem;
		margin: 0;

		transition: color 0.5s ease;
	}

	.button_text:hover {
		border: 1px solid var(--primary_color);
		background-color: transparent;
	}

	.button_text:hover p{
		color: var(--primary_color);
	}

	@media (max-width: 768px) {

		.button_text p{
			font-size: 1.15rem;
		}

		.button_text img{
			height: 1.4rem;
			width: 1.4rem;
		}

	}

</style>