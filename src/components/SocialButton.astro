---
interface Props {
	link: string;
	label: string;
}

const {link, label} = Astro.props;
---

<a type="button" class="simple_button" aria-label={label} href={link} target="_blank">
	<slot/>
</a>

<style>
	.simple_button{
		display: flex;
		width: 1.7rem;
		height: 1.7rem;
		justify-content: center;
		align-items: center;
		padding: 5px;
		border: none;
		background-color: transparent;
		border-radius: 5px;
		transition: background-color 0.5s ease;
	}

	.simple_button:hover {
		background-color: var(--secondary_color);
	}

	.simple_button svg{
		transition: fill 0.5s ease;
	}

	.simple_button:hover svg{
		fill: white;
	}

	@media (max-width: 768px) {

		.simple_button {
			width: 2rem;
			height: 2rem;
		}

	}

</style>