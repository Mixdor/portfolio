---
import docs from '../assets/docs.svg';
interface Props {
	text: String;
	href: String;
	download: String;
}

const {text, href, download} = Astro.props;
---
<a class="button_text" href={href} download={download}>
	<svg viewBox="0 0 16 16" fill="white" xmlns="http://www.w3.org/2000/svg">
		<path d="M5.33333 12H10.6667V10.6666H5.33333V12ZM5.33333 9.33331H10.6667V7.99998H5.33333V9.33331ZM4 14.6666C3.63333 14.6666 3.31945 14.5361 3.05833 14.275C2.79722 14.0139 2.66667 13.7 2.66667 13.3333V2.66665C2.66667 2.29998 2.79722 1.98609 3.05833 1.72498C3.31945 1.46387 3.63333 1.33331 4 1.33331H9.33333L13.3333 5.33331V13.3333C13.3333 13.7 13.2028 14.0139 12.9417 14.275C12.6806 14.5361 12.3667 14.6666 12 14.6666H4ZM8.66667 5.99998H12L8.66667 2.66665V5.99998Z"/>
	</svg>
	<!-- <img src={docs.src} alt=""> -->
	<p>{text}</p>
</a>

<style>
	.button_text{

		display: flex;
		align-items: center;
		border-radius: 20px;
		padding-top: 2px;
		padding-bottom: 2px;
		padding-left: 10px;
		padding-right: 10px;
		gap: 0.75rem;
		text-decoration: none;
		height: 2rem;
		/* width: 10rem; */

		background-color: var(--secondary_color);
		border: 1px solid var(--transparent);

		transition: background-color 0.5s ease, border 0.5s ease;
	}

	.button_text p{

		color: var(--text_color);
		font-family: Mada_Regular;
		font-size: 1rem;
		margin: 0;

		transition: color 0.5s ease;
	}

	.button_text svg{
		width: 1.25rem;
		transition: fill 0.5s ease;
	}

	.button_text:hover {
		border: 1px solid var(--primary_color);
		background-color: transparent;
	}

	.button_text:hover p{
		color: var(--primary_color);
	}

	.button_text:hover svg{
		fill: var(--primary_color);
	}

</style>